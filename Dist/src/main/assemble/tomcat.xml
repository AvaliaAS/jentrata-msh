<assembly
	xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
	<id>tomcat</id>
	<formats>
		<format>dir</format>
	</formats>
	<includeBaseDirectory>false</includeBaseDirectory>
	<baseDirectory>/</baseDirectory>
	
	<!-- include license and release notes -->
	<files>
		<file>
			<outputDirectory>/</outputDirectory>
			<source>../LICENSE.txt</source>
		</file>
		<file>
			<outputDirectory>/</outputDirectory>
			<source>../RELEASE-NOTES.txt</source>
		</file>
	</files>
	
	<!-- include sql scripts -->
	<fileSets>
		<fileSet>
			<directory>src/main/scripts/sql</directory>
			<includes>
				<include>**/*.sql</include>
			</includes>
			<outputDirectory>sql</outputDirectory>
		</fileSet>
	</fileSets>
	
	<moduleSets>
	
		<!-- build webapp directory -->
		<moduleSet>
			<!-- Enable access to all projects in the current multimodule build! -->
			<useAllReactorProjects>true</useAllReactorProjects>

			<!-- Now, select which projects to include in this module-set. -->
			<includes>
				<include>hk.hku.cecid.piazza.core:piazza-corvus-core-web</include>
			</includes>
			<binaries>
				<outputDirectory>webapps/corvus</outputDirectory>
				<unpack>true</unpack>
				<includeDependencies>false</includeDependencies>
			</binaries>
		</moduleSet>
		
		<!-- build plugins -->
		
		<!-- need to have 2 modules sets defined per plugin as you need to include jar -->
		<!-- as well as extract the jar but filter out the classes. THERE is probably  -->
		<!-- a better way to do this                                                   -->
		
		<!-- hk.hku.cecid.piazza.corvus.core.main plugin -->	
		<moduleSet>
			<useAllReactorProjects>true</useAllReactorProjects>
			<includes>
				<include>hk.hku.cecid.piazza.plugins:piazza-corvus-main</include>
			</includes>
			<binaries>
				<outputDirectory>plugins/hk.hku.cecid.piazza.corvus.core.main</outputDirectory>
				<unpack>false</unpack>
				<includeDependencies>false</includeDependencies>
				<outputFileNameMapping>corvus-main-system.jar</outputFileNameMapping>
			</binaries>
		</moduleSet>
		
		<moduleSet>
			<useAllReactorProjects>true</useAllReactorProjects>
			<includes>
				<include>hk.hku.cecid.piazza.plugins:piazza-corvus-main</include>
			</includes>
			<binaries>
				<outputDirectory>plugins/hk.hku.cecid.piazza.corvus.core.main</outputDirectory>
				<unpack>true</unpack>
				<unpackOptions>
					<excludes>
						<exclude>hk/**</exclude>
					</excludes>
					<filtered>true</filtered>
				</unpackOptions>
				<includeDependencies>false</includeDependencies>
			</binaries>
		</moduleSet>
		
