<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <parent>
        <groupId>hk.hku.cecid.piazza</groupId>
        <artifactId>piazza-parent</artifactId>
        <version>2.0.20100331-SNAPSHOT</version>
        <relativePath>../pom.xml</relativePath>
    </parent>

	<groupId>hk.hku.cecid.piazza.dist</groupId>
    <artifactId>piazza-dist</artifactId>
    <packaging>pom</packaging>

    <name>Piazza: Distribution</name>
    <description>Piazza Distribution</description>
    
    <dependencies>
    
    	<dependency>
    		<groupId>hk.hku.cecid.piazza.plugins</groupId>
    		<artifactId>piazza-corvus-main</artifactId>
    		<version>${project.version}</version>
    	</dependency>
    
    </dependencies>
    
    <build>
    	<plugins>
			<plugin>
				<artifactId>maven-assembly-plugin</artifactId>
				<executions>
					<execution>
						<id>distro-assemble</id>
						<phase>package</phase>
						<goals>
							<goal>single</goal>
						</goals>
						<configuration>
							<filters>
								<filter>src/main/filters/plugins.properties</filter>
							</filters>
							<descriptors>
								<descriptor>src/main/assemble/${distribution}.xml</descriptor>
							</descriptors>
						</configuration>	
					</execution>
				</executions>			
			</plugin>
    	</plugins>
    </build>
    
</project>